{
  "name": "@flux/core",
  "version": "0.21.0",
  "description": "Core game logic for the Flux Simulation Project",
  "license": "UNLICENCED",
  "author": "",
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:clean": "rm -rf ./dist",
    "build:cjs": "tsc --project tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json && tsc-alias -p tsconfig.esm.json && node scripts/fix-esm-extensions.js && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "build:types": "tsc --project tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "type-check": "tsc --noEmit",
    "check-circular": "npx madge --circular --extensions ts,js src/",
    "test": "vitest run",
    "cli": "npx tsx src/cli.ts"
  },
  "volta": {
    "node": "22.15.0",
    "npm": "10.9.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "madge": "^8.0.0",
    "mermaid": "^11.12.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  }
}
