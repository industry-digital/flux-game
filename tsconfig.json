{
  "compilerOptions": {
    "target": "es2020",
    "types": ["node"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "scripts"]
}
