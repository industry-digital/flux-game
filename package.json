{
  "name": "flux-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev:guide": "npm run dev --workspace=@flux/guide",
    "dev:client": "npm run tauri:dev --workspace=@flux/client",
    "dev:tools": "npm run dev --workspace=@flux/tools",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
